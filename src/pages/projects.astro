---
import HomeSider from '@components/layout/HomeSider.astro';
import ProjectsGrid from '@components/projects/ProjectsGrid';
import Cover from '@components/ui/cover/Cover.astro';
import { CONTENT_PADDING } from '@constants/layout';
import { projectsIntro } from '@constants/projects-config';
import { siteConfig } from '@constants/site-config';
import Layout from '@layouts/Layout.astro';
import TwoColumnLayout from '@layouts/TwoColumnLayout.astro';

const title = `${projectsIntro.title} | ${siteConfig.title}`;
const description = projectsIntro.subtitle || '我的开源项目和作品集';
---

<Layout title={title} description={description}>
  <TwoColumnLayout>
    <Cover slot="cover" title={projectsIntro.title} />
    <HomeSider slot="sider" />
    <div
      class={`bg-gradient-start shadow-box tablet:shadow-none flex flex-col gap-10 overflow-hidden ${CONTENT_PADDING.standard}`}
    >
      <div class="mt-4">
        <ProjectsGrid client:load />
      </div>
    </div>
  </TwoColumnLayout>
</Layout>
